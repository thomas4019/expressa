{
    "extends": "eslint:recommended",
    "ignorePatterns": ["node_modules", "modules/admin", "**/build/", "cypress"],
    "rules": {
        "no-var": "error",
        "prefer-const": "error",
        "no-console": ["error", { "allow": ["error"] }],
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "quote-props": ["error", "as-needed"],
        "indent": ["error", 2, { "MemberExpression": 1 }],
        "linebreak-style": ["error", "unix"]
    },
    "globals": {
        "after": true,
        "before": true,
        "describe": true,
        "it": true,
        "xit": true,
        "xdescribe": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "env": {
        "es6": true,
        "node": true
    }
}
